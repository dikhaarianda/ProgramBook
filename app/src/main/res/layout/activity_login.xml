<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#096BFD"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/txt_register1"
        android:layout_width="209dp"
        android:layout_height="157dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/droid_sans_bold"
        android:text="Already have an Account ?"
        android:textColor="#FFFFFF"
        android:textSize="43sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/logo_buku"
        android:layout_width="230dp"
        android:layout_height="168dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/logo_buku" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        app:srcCompat="@drawable/shape_button" />

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/blue_900"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/blue_900"
        android:textColorHint="@color/blue_900"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="390dp"
        android:backgroundTint="@color/blue_900"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/blue_900"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="465dp"
        android:layout_marginStart="80dp"
        android:width="150dp"
        android:background="@drawable/btn_shape"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="290dp"
        android:layout_height="21dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="144dp"
        android:text="Not have an account? Register"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0"
        android:textColor="@color/blue_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreateAccount"
        app:layout_constraintVertical_bias="1.0" />



</RelativeLayout>